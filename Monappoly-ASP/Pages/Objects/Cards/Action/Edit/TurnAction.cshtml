@page "{cardId}/{groupId}"
@using MonappolyLibrary.GameModels.Cards.CardActions.Turn
@model Monappoly_ASP.Pages.Objects.Cards.Action.Edit.TurnAction

@{
    Layout = "Shared/_ActionLayout";
    ViewData["Title"] = "Turn Action";
    ViewData["CardId"] = Model.Card.Id;
    ViewData["GroupId"] = Model.GroupId;
}

<div class="mb-3">
    <label class="form-label">Turn Action Type</label>
    <select asp-items="Model.Types" class="form-select" onchange="GetActionPartial(this, 'Turn')"></select>
</div>
<div id="move-action">
    <partial name="Objects/Cards/TurnAction/_BaseTurnActionPartial" model="TurnActionType.Miss"/>
</div>