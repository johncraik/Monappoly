@page "{cardId}/{groupId}"
@using MonappolyLibrary.GameModels.Cards.CardActions.Move
@model Monappoly_ASP.Pages.Objects.Cards.Action.Edit.MoveAction

@{
    Layout = "Shared/_ActionLayout";
    ViewData["Title"] = "Move Action";
    ViewData["CardId"] = Model.Card.Id;
    ViewData["GroupId"] = Model.GroupId;
}

<div class="mb-3">
    <label class="form-label">Move Action Type</label>
    <select asp-items="Model.Types" class="form-select" onchange="GetActionPartial(this, 'Move')"></select>
</div>
<div id="move-action">
    <partial name="Objects/Cards/MoveAction/_BaseMoveActionPartial" model="MoveActionType.Simple"/>
</div>