@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "../../../Pages/Shared/_Layout";
    }
}

<div class="container-40">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="card mb-3">
        <div class="card-header bg-highlight-light text-white">
            <h5 class="card-title">Card Information</h5>
        </div>
        <div class="card-body bg-light">
            <p>
                <b>Card Deck: </b>@Model.Card.CardDeck.Name<br/>
                @Model.Card.CardDeck.Description
            </p>
            <p>
                <b>Card Type: </b>@Model.Card.CardType.Name<br/>
                @Model.Card.CardType.Description
            </p>
            <p><b>Text:</b><br/>@Model.Card.Text</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="card-title">Setup Action</h5>
        </div>
        <div class="card-body bg-light">
            @RenderBody()

            <div class="mt-2">
                <button class="btn btn-success" title="Create Action" type="button"
                        onclick="CreateAction('@ViewData["GroupId"]')">
                    Create @ViewData["Title"]
                </button>
                <button class="btn btn-danger mx-3" title="Cancel and go back to the previous page" type="button"
                        onclick="location.assign('/Objects/Cards/Action/@(ViewData["CardId"])')">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Cards/actions.js"></script>