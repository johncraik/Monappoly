@model MonappolyLibrary.GameModels.Cards.CardActions.Dice.ConvertDiceAction

<form method="post" asp-controller="CardAction" asp-action="ConvertDiceAction" id="form">
    <input asp-for="GroupId" id="group-id" type="hidden"/>
    <div class="mb-3">
        <label asp-for="TurnLength" class="form-label"></label>
        <input asp-for="TurnLength" class="form-control"/>
        <span asp-validation-for="TurnLength" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check form-switch">
        @if (Model.ToTriple)
        {
        <input asp-for="ToTriple" class="form-check-input" type="checkbox" id="is-triple" checked/>
        }
        else
        {
        <input asp-for="ToTriple" class="form-check-input" type="checkbox" id="is-triple"/>
        }
        <label asp-for="ToTriple" class="form-check-label" for="is-triple"></label>
        <span asp-validation-for="ToTriple" class="text-danger"></span>
    </div>
</form>