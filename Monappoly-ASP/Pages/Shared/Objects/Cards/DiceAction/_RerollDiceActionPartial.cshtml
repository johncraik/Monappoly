@model MonappolyLibrary.GameModels.Cards.CardActions.Dice.RerollDiceAction

<form method="post" asp-controller="CardAction" asp-action="RerollDiceAction" id="form">
    <input asp-for="GroupId" id="group-id" type="hidden"/>
    <div class="mb-3">
        <label asp-for="TurnLength" class="form-label"></label>
        <input asp-for="TurnLength" class="form-control"/>
        <span asp-validation-for="TurnLength" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DiceCount" class="form-label"></label>
        <input asp-for="DiceCount" class="form-control"/>
        <span asp-validation-for="DiceCount" class="text-danger"></span>
    </div>
</form>